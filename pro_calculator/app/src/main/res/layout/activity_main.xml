<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/calculator">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:height="50dp"
        android:id="@+id/number"
        android:textSize="45sp"
        android:textStyle="bold|italic"
        android:textIsSelectable="false" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="AC"
        android:id="@+id/button"
        android:layout_below="@+id/number"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView" />

    <Button
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="+/-"
        android:id="@+id/button2"
        android:layout_alignBottom="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:layout_below="@+id/number" />

    <Button
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="cos"
        android:id="@+id/button3"
        android:layout_below="@+id/number"
        android:layout_toEndOf="@+id/button2"
        android:layout_alignBottom="@+id/button2" />

    <Button
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:layout_below="@+id/number"
        android:layout_toEndOf="@+id/button3"
        android:text="/"
        android:layout_above="@+id/button5" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="7"
        android:id="@+id/button5"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="8"
        android:id="@+id/button6"
        android:layout_alignBottom="@+id/button5"
        android:layout_toEndOf="@+id/button" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="9"
        android:id="@+id/button7"
        android:layout_alignBottom="@+id/button6"
        android:layout_toEndOf="@+id/button6" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="x"
        android:id="@+id/button8"
        android:layout_alignBottom="@+id/button7"
        android:layout_toEndOf="@+id/button7" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="4"
        android:id="@+id/button9"
        android:layout_below="@+id/button5"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button5" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="5"
        android:id="@+id/button10"
        android:layout_alignBottom="@+id/button9"
        android:layout_toEndOf="@+id/button5" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="6"
        android:id="@+id/button11"
        android:layout_alignBottom="@+id/button10"
        android:layout_toEndOf="@+id/button10" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="－"
        android:id="@+id/button12"
        android:layout_alignBottom="@+id/button11"
        android:layout_toEndOf="@+id/button11" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="1"
        android:id="@+id/button13"
        android:layout_below="@+id/button9"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button9" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="2"
        android:id="@+id/button14"
        android:layout_alignBottom="@+id/button13"
        android:layout_toEndOf="@+id/button9" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="3"
        android:id="@+id/button15"
        android:layout_alignBottom="@+id/button14"
        android:layout_toEndOf="@+id/button14" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="+"
        android:id="@+id/button16"
        android:layout_alignBottom="@+id/button15"
        android:layout_alignStart="@+id/button12" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="0"
        android:id="@+id/button17"
        android:layout_below="@+id/button13"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button15" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="."
        android:id="@+id/button18"
        android:layout_alignBottom="@+id/button17"
        android:layout_toEndOf="@+id/button17" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="="
        android:id="@+id/button19"
        android:layout_alignBottom="@+id/button18"
        android:layout_toEndOf="@+id/button18" />

</RelativeLayout>
